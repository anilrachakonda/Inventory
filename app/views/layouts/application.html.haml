!!!
%html
  %head
    %title Inventory
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/inventories/list"} Inventory
          .btn-group.pull-right
            %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.icon-user
              = user_signed_in? ? current_user : 'Guest'
              %span.caret
            %ul.dropdown-menu
              - if user_signed_in?
                %li= link_to("Sign Out", signout_path, :method => :delete)
              - else
                %li= link_to 'Sign In', signin_path
          .nav-collapse
            %ul.nav.pull-left
              %li= link_to 'Home', list_inventories_path
    .container
      .hero-unit
        = render 'shared/flashes'
        = yield
      %hr/
      %footer
        %p &copy; Copyright.Imaginea.2013.
    / /.container